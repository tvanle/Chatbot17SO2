# ============================================
# RAG SYSTEM - ENVIRONMENT VARIABLES
# ============================================

# OpenAI API Configuration (Required for LLM generation)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API (Optional - for Claude models)
# ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# ============================================
# QDRANT VECTOR DATABASE
# ============================================

QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=  # Optional for Qdrant Cloud
QDRANT_COLLECTION=ptit_documents

# ============================================
# REDIS CACHE (Optional but recommended)
# ============================================

# Enable/disable caching (true/false)
ENABLE_CACHE=false

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# DATABASE (SQLAlchemy)
# ============================================

# Use SQLite (default) or MySQL
USE_SQLITE=true

# MySQL settings (if USE_SQLITE=false)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=your-database-password
DB_NAME=chatbot_db

# ============================================
# CORS & SERVICE URLs
# ============================================

# Chatbot Service URL (Microservice Architecture)
CHATBOT_SERVICE_URL=http://127.0.0.1:8000

# CORS Origins (Frontend URLs)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://127.0.0.1:5500"]

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Debug mode
DEBUG=false
