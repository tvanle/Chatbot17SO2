# ============================================
# CHATBOT17SO2 - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# OpenAI API Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Anthropic (Claude) API
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================
# Qdrant Vector Database Configuration
# ============================================
# For Docker Compose, use service name 'qdrant'
# For local development, use 'localhost'
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=ptit_documents

# Optional: Qdrant API Key (if using Qdrant Cloud)
# QDRANT_API_KEY=your-qdrant-api-key

# ============================================
# Database Configuration (SQLite/MySQL)
# ============================================
# Use SQLite by default (no additional setup needed)
USE_SQLITE=true

# MySQL Configuration (optional)
# Uncomment and configure if you want to use MySQL instead
# USE_SQLITE=false
# DB_USER=root
# DB_PASS=yourpassword
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_NAME=chatbot

# ============================================
# RAG System Configuration
# ============================================
# Embedding model (sentence-transformers)
# Options:
#   - sentence-transformers/all-MiniLM-L6-v2 (384 dim, fast)
#   - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (384 dim, multilingual)
#   - keepitreal/vietnamese-sbert (768 dim, Vietnamese optimized)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Model
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=800
LLM_TEMPERATURE=0.7

# Chunking settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval settings
DEFAULT_TOP_K=10
SIMILARITY_THRESHOLD=0.3

# Caching
ENABLE_CACHE=true
CACHE_TTL=3600

# ============================================
# Application Settings
# ============================================
# Default namespace for documents
DEFAULT_NAMESPACE=ptit_docs

# Answer language (vi or en)
ANSWER_LANGUAGE=vi

# ============================================
# CORS Settings (for frontend)
# ============================================
# Add your frontend URLs here (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://127.0.0.1:5500

# ============================================
# Development Settings
# ============================================
# Enable SQL query logging
DB_ECHO=false

# Debug mode
DEBUG=false
